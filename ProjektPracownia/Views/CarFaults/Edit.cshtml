@model ProjektPracownia.Models.CarFault

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>CarFault</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CarFaultID" />
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="severity" class="control-label">Car make</label>
                <select asp-for="severity" class="form-control" asp-items="ViewBag.carFaultsSeverity"></select>
            </div>
            <div class="form-group">
                <label asp-for="fixCost" class="control-label"></label>
                <input asp-for="fixCost" class="form-control" />
                <span asp-validation-for="fixCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="CarEdit" asp-action="Index">Back to List</a>
</div>

